[global/wm]
margin-top = 5
;;margin-bottom = 5
margin-bottom = 0
override-redirect = true 
; vim:ft=dosini

[bar/gab]
;monitor = ${env:MONITOR:HDMI-1}
;monitor = ${env:MONITOR:LVDS-1}
width = 100%
height = 18
offset-x = 0
offset-y = 0

background = ${colors.bar_bg}
foreground = ${colors.bar_fg}

;offset-x = 1%
;offset-y = 1%
;radius = 6.0

fixed-center = true

;background = ${colors.background}
;foreground = ${colors.foreground}


;; ------ BORDERS ------ ;;;
;; Borders were 5
   border-top-size       = 2
   border-bottom-size    = 2
   border-top-color      = ${colors.bar_bg}
   border-bottom-color      = ${colors.bar_bg}   

;        line-size = 3
;        line-color = #f00

;        border-size = 0
;        border-color = #00000000

        padding-left = 0
        padding-right = 0

        module-margin-left = 1
        module-margin-right = 2

	font-N = <fontconfig pattern>;<vertical offset>
	font-0 = WunconSiji:size                        = 4;2
	font-1 = Misc Tamsyn:pixelsize                  = 8;2
	font-2 = Misc Tamsyn:pixelsize                  = 8;2

modules-left = bspwm
modules-center = mpd
;;modules-right = essid temperature xbacklight battery volume date
modules-right = essid xbacklight battery volume date
;; memory cpu .. 
tray-position = right
tray-padding = 0
;tray-transparent = true
;tray-background = #0063ff

;; this should allow reloading
