;;User modules

;;Kernel version
[module/kernel]
type = custom/script
exec = uname -r
tail = false
interval = 1024

;; Weather module
[module/weather]
type = custom/script
interval = 10
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/weather.py

